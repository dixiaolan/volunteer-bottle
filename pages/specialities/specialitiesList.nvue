		<view class="uni-bg-white">
			<!-- 热门专业 s-->
			<view class="uni-bold-tit"><text>热门专业</text></view>
			<view class="uni-flex popular-box">
				<view v-for="(hot,index) in PopularMajor" :key="hot.id" class="popular">
